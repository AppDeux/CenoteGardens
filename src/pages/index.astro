---
import Layout from "@/layouts/Layout.astro";
import BannerMain from "@/components/banners/BannerMain.astro";
import DescriptionSecction from "@/components/sections/DescriptionSection/DescriptionSection.astro";
import BannerParallax from "@/components/banners/BannerParallax.astro";
import MapPointsInterestMobile from "@/components/maps/MapPointsInterestMobile";
import MapPointsInterestDesk from "@/components/maps/MapPointsInterestDesk";
import PromotionSection from "@/components/sections/DescriptionSection/PromotionSection.astro";
import AmenitiesSection from "@/components/sections/DescriptionSection/AmenitiesSection.astro";
import SliderComponent from "@/components/sliders/SliderComponent.vue";
//importar imagenes del slider de amenidades
import imgAmenidades from "@/data/imgAmenidades";
import LocationSection from "@/components/sections/LocationSection.astro";
import AvailabilitySection from "@/components/sections/AvailabilitySection.astro";
---

<Layout title="Cenote gardens">
  <BannerMain />
  <DescriptionSecction />
  <BannerParallax />
  <PromotionSection />
  <AmenitiesSection />
  <SliderComponent client:load imgPaths={imgAmenidades} />
  <LocationSection />
  <MapPointsInterestDesk client:load />
  <MapPointsInterestMobile client:load />
  <AvailabilitySection />
</Layout>
