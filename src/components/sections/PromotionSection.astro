---
import iconLine from "@/assets/svgs/icon_line.svg";
import { Image } from "astro:assets";
import iconLeaves from "@/assets/svgs/icon_leaves_white.svg";
import iconConectivity from "@/assets/svgs/icon_conectivity.svg";
import iconDome from "@/assets/svgs/icon_dome.svg";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="container promotion_section px-4 lg:px-11 xl:px-36 min-[1536px]:px-72"
>
  <div class="promotion_section text-accent-700 pt-12 text-xs md:text-xs">
    <div class="flex flex-col items-center">
      <Image
        class="promotion__iconLine max-w-20 md:max-w-32"
        src={iconLine}
        alt="Icon Line"
        loading="lazy"
        data-aos="fade-right"
      />
    </div>
    <div>
      <h2
        class="font-title text-grey-950 uppercase pt-12 md:px-24 mb-4 text-3xl text-center md:text-4xl md:text-[2.5rem] md:pb-6"
      >
        {t("promotionSection.title")}
      </h2>
    </div>
    <div
      class="chance grid grid-cols-1 md:grid-cols-3 md:gap-y-0 md:gap-x-4 mb-12 px-4 md:px-8"
    >
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="promotion__iconLeaves w-16 pb-4"
          src={iconLeaves}
          alt="Icon Leaves"
          loading="lazy"
          data-aos="fade-right"
        />
        <h3 class="font-subtitle uppercase pb-4 text-xl">
          {t("promotionSection.card1.title")}
        </h3>
        <p set:html={t("promotionSection.card1.desc")} />
      </div>

      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="promotion__iconConectivity w-16 pb-4"
          src={iconConectivity}
          alt="Icon Conectivity"
          loading="lazy"
          data-aos="fade-right"
        />
        <h3 class="font-subtitle uppercase pb-4 text-xl">
          {t("promotionSection.card2.title")}
        </h3>
        <p set:html={t("promotionSection.card2.desc")} />
      </div>

      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="promotion__iconDome w-16 pb-4"
          src={iconDome}
          alt="Icon Dome"
          loading="lazy"
          data-aos="fade-right"
        />
        <h3 class="font-subtitle uppercase pb-4 text-xl">
          {t("promotionSection.card3.title")}
        </h3>
        <p set:html={t("promotionSection.card3.desc")} />
      </div>
    </div>
  </div>
</section>
