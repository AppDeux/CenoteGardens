<style lang="scss">
  .description_section {
    display: flex;
    justify-content: center;
    @apply text-accent-700;
    padding-top: 3rem;
    flex-direction: column;
  }
  .presentation {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 0rem 1rem;
    margin-bottom: 3.5rem;
  }
  .presentation__iconWorld {
    margin-bottom: 1.5rem;
    max-width: 5.75rem;
  }
  @media (min-width: 768px) {
    .presentation__iconWorld {
      max-width: 6.25rem;
    }
    .presentation {
      max-width: 620px;
      font-size: 1.25rem;
    }
  }
</style>
