---
import { Image } from "astro:assets";
import iconWorld from "@/assets/svgs/icon_world.svg";
import iconLeaves from "@/assets/svgs/icon_leaves.svg";
import iconLine from "@/assets/svgs/icon_line.svg";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="container amenities_section px-4 lg:px-11 xl:px-36 min-[1536px]:px-72"
>
  <div class="amenities_section text-accent-700 text-xs md:text-xs">
    <div>
      <h1
        class="font-title text-grey-950 uppercase px-4 md:px-8 mb-4 text-2xl md:text-[2rem] md:pb-6"
      >
        {t("amenitiesSection.title")}
      </h1>
    </div>
    <div
      class="chance grid grid-cols-1 md:grid-cols-3 md:gap-y-0 md:gap-x-4 mb-12 px-4 md:px-8"
    >
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="amenities__iconWorld w-16 pb-4"
          src={iconWorld}
          alt="Icon World"
        />
        <h2 class="font-subtitle uppercase pb-4 text-lg md:text-base">
          {t("amenitiesSection.card1.title")}
        </h2>
        <hr class="bg-accent-700 w-16 h-[2px]" />
        <p class="pt-2">{t("amenitiesSection.card1.desc")}</p>
      </div>
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="amenities__iconLeaves w-16 pb-4 md:pt-4 md:pb-4"
          src={iconLeaves}
          alt="Icon LeaesiconLeaves"
        />
        <h2 class="font-subtitle uppercase pb-4 text-lg md:text-base">
          {t("amenitiesSection.card2.title")}
        </h2>
        <hr class="bg-accent-700 w-16 h-[2px]" />
        <p class="pt-2">
          {t("amenitiesSection.card2.desc")}
        </p>
      </div>
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="amenities__iconLine w-16 pb-4 md:pb-6 md:pt-6"
          src={iconLine}
          alt="Icon Line"
        />
        <h2 class="font-subtitle uppercase pb-4 text-lg md:text-base">
          {t("amenitiesSection.card3.title")}
        </h2>
        <hr class="bg-accent-700 w-16 h-[2px]" />
        <p class="pt-2">
          {t("amenitiesSection.card3.desc")}
        </p>
      </div>
    </div>
    <div class="px-4 md:px-8">
      <p class="text-lg" set:html={t("amenitiesCarousel.title")} />
    </div>
  </div>
</section>
