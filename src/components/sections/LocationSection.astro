---
import { Image } from "astro:assets";
import bridgeImage from "@/assets/imgs/bridge.png";
import jumpingImage from "@/assets/imgs/jumping.png";
import grottoImage from "@/assets/imgs/grotto.png";
import swimmingImage from "@/assets/imgs/swimming.png";
import personImage from "@/assets/imgs/person.png";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="location"
  class="container location_section px-4 lg:px-11 xl:px-36 min-[1536px]:px-72 pb-16"
>
  <h1
    class="font-title text-grey-950 uppercase pt-12 md:px-24 mb-6 text-3xl md:text-5xl text-center md:pb-6"
  >
    {t("locationSection.title")}
  </h1>
  <div
    class="text-accent-700 grid grid-cols-1 md:grid-cols-3 md:gap-y-0 md:gap-x-16 mb-12 px-0 md:px-8 text-sm md:text-base lg:text-lg"
  >
    <div class="flex flex-col items-center">
      <Image
        class="location__bridgeImage"
        src={bridgeImage}
        alt="Bridge Image"
      />
    </div>
    <div class="pt-4 pb-4 md:col-span-2 min-[1400px]:px-8">
      <p set:html={t("locationSection.desc")} />
      <div class="grid grid-cols-1 md:grid-cols-2 md:gap-x-8 xl:pt-4">
        <div class="md:pt-16 flex flex-col items-center">
          <Image
            class="location__jumpingImage pt-4"
            src={jumpingImage}
            alt="Jumping Image"
          />
        </div>
        <div class="pt-4 md:pt-28 lg:pt-28 xl:pt-28 min-[2560px]:pt-60">
          <p set:html={t("locationSection.desc2")} />
        </div>
      </div>
    </div>
  </div>
  <div class="bg-accent-700 text-accent-50 p-8">
    <p set:html={t("locationSection.desc3")} />
  </div>
  <div
    class="grid grid-cols-1 md:grid-cols-4 md:gap-y-0 md:gap-x-12 px-0 md:px-8 md:text-sm lg:text-base"
  >
    <div class="pt-4 md:pt-20 lg:pt-32">
      <p set:html={t("locationSection.desc4")} />
    </div>
    <div class="md:pt-16 flex flex-col items-center">
      <Image
        class="location__grottoImage pt-4 mb-4"
        src={grottoImage}
        alt="Grotto Image"
      />
      <h2 class="font-subtitle text-center">
        {t("locationSection.cardTitle1")}
      </h2>
    </div>
    <div class="md:pt-16 flex flex-col items-center">
      <Image
        class="location__swimmingImage pt-4 mb-4"
        src={swimmingImage}
        alt="Swimming Image"
      />
      <h2 class="font-subtitle text-center">
        {t("locationSection.cardTitle2")}
      </h2>
    </div>
    <div class="md:pt-16 flex flex-col items-center">
      <Image
        class="location__personImage pt-4 mb-4"
        src={personImage}
        alt="Person Image"
      />
      <h2 class="font-subtitle text-center">
        {t("locationSection.cardTitle3")}
      </h2>
    </div>
  </div>
</section>
