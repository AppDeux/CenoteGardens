---
import { Image } from "astro:assets";
import iconWorld from "@/assets/svgs/icon_world.svg";
import iconLeaves from "@/assets/svgs/icon_leaves.svg";
import iconLine from "@/assets/svgs/icon_line.svg";

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="container amenities_section px-4 lg:px-11 xl:px-36 min-[1536px]:px-72"
>
  <div class="amenities_section text-accent-700 text-xs md:text-xs">
    <div>
      <h2
        class="font-title text-center text-grey-950 uppercase px-4 md:px-8 mb-4 text-3xl md:text-4xl md:text-[2.5rem] md:pb-6"
      >
        {t("amenitiesSection.title")}
      </h2>
    </div>
    <div
      class="chance grid grid-cols-1 md:grid-cols-3 md:gap-y-0 md:gap-x-0 mb-12 px-4 md:px-8"
    >
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="amenities__iconWorld w-16 mb-2 md:mb-4"
          src={iconWorld}
          alt="Icon World"
        />
        <h3
          class="font-subtitle uppercase md:flex md:items-end md:h-14 mb-4 text-xl"
        >
          {t("amenitiesSection.card1.title")}
        </h3>
        <hr class="bg-accent-700 w-16 h-[2px] mb-2" />
        <p class="pt-2" set:html={t("amenitiesSection.card1.desc")} />
      </div>
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="amenities__iconLeaves w-16 mb-2 md:mb-4"
          src={iconLeaves}
          alt="Icon LeaesiconLeaves"
        />
        <h3
          class="font-subtitle uppercase md:flex md:items-end md:h-14 mb-4 text-xl"
        >
          {t("amenitiesSection.card2.title")}
        </h3>
        <hr class="bg-accent-700 w-16 h-[2px] mb-2" />
        <p class="pt-2" set:html={t("amenitiesSection.card2.desc")} />
      </div>
      <div class="flex flex-col items-start pt-4 pb-4">
        <Image
          class="amenities__iconLine w-16 mb-2 md:mb-4"
          src={iconLine}
          alt="Icon Line"
        />
        <h3
          class="font-subtitle uppercase md:flex md:items-end md:h-14 mb-4 text-xl"
        >
          {t("amenitiesSection.card3.title")}
        </h3>
        <hr class="bg-accent-700 w-16 h-[2px] mb-2" />
        <p class="pt-2" set:html={t("amenitiesSection.card3.desc")} />
      </div>
    </div>
    <div class="px-4 md:px-8">
      <p class="text-xl text-center" set:html={t("amenitiesCarousel.title")} />
    </div>
  </div>
</section>
