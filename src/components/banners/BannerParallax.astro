---
import parallaxBg from "@/assets/imgs/parallaxBg.webp";
import { getImage } from "astro:assets";

const optimizedBackground = await getImage({
  src: parallaxBg,
  format: "webp",
});

import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  class="w-full h-96 bg-slate-700 paralax"
  style={`background-image: url(${optimizedBackground.src});`}
>
  <div class="container flex m-auto h-full items-center justify-center px-4">
    <h2
      class="md:max-w-3xl font-sans font-normal text-2xl text-center leading-8 text-white"
    >
      {t("parallaxBanner.title")}
    </h2>
  </div>
</section>

<style>
  .paralax {
    background-position: bottom center;
    background-size: cover;
    background-attachment: fixed;
  }
</style>
